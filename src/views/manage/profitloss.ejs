    <script>
      $(document).ready(function () {
        function getFormattedDate(type) {
          let date = new Date();

          if (type === "yesterday") {
            date.setDate(date.getDate() - 1);
          }

          let year = date.getFullYear();
          let month = String(date.getMonth() + 1).padStart(2, "0"); // Ensure two digits
          let day = String(date.getDate()).padStart(2, "0"); // Ensure two digits

          return `${year}-${month}-${day}`;
        }

        function fetchProfitLossData() {
          let selectedDate = getFormattedDate($("#time-range").val()); // Get formatted date

          console.log("date", selectedDate);
          $.ajax({
            type: "POST",
            url: "/api/webapi/get-profit-loss",
            data: JSON.stringify({ date: selectedDate }), // Send formatted date
            contentType: "application/json", // Ensure correct request format
            dataType: "json",
            success: function (response) {
              console.log("API Response:", response);
              if (response.status) {
                $("#total-bet").text(response.totalbetMoney);
                $("#total-win").text(response.totalWinnigMoney);
                $("#total-loss").text(response.totalLossMoney);
                $("#total-tax").text(response.totalTextMoney);
                $("#profit-margin").text(response.winningPercentage + "%");
              } else {
                console.error("Invalid response format");
              }
            },
            error: function (xhr, status, error) {
              console.error("API Fetch Error:", status, error);
            },
          });
        }

        $("#refresh").click(function () {
          fetchProfitLossData(); // Fetch data when refresh button is clicked
        });

        $("#time-range").change(function () {
          fetchProfitLossData(); // Auto-fetch when date filter is changed
        });

        fetchProfitLossData(); // Load default data when page loads
      });
    </script>

