      });
    </script>

    <script>
      $(".edit-banner").click(function (e) {
        e.preventDefault();
        const ban1 = $("#ban1").val();
        const ban2 = $("#ban2").val();
        const ban3 = $("#ban3").val();
        const ban4 = $("#ban4").val();
        const ban5 = $("#ban5").val();
        const ban6 = $("#ban6").val();
        const ban7 = $("#ban7").val();
        const ban8 = $("#ban8").val();
        const ban9 = $("#ban9").val();
        const ban10 = $("#ban10").val();
        $.ajax({
          type: "POST",
          url: "/api/webapi/banners",
          data: {
            ban1: ban1,
            ban2: ban2,
            ban3: ban3,
            ban4: ban4,
            ban5: ban5,
            ban6: ban6,
            ban7: ban7,
            ban8: ban8,
            ban9: ban9,
            ban10: ban10,
          },
          dataType: "json",
          success: function (response) {
            if (response.status == true) {
              Swal.fire(
                "Good job!",
                "Your Links Updated Successfully!",
                "success"
              );
            } else {
