        <script>
          function updatePreview(bannerNumber) {
            let input = document.getElementById(`ban${bannerNumber}`).value;
            let preview = document.getElementById(`preview${bannerNumber}`);

            if (input) {
              preview.src = input;
            } else {
              preview.src = `https://via.placeholder.com/400x150?text=Banner+${bannerNumber}`;
            }
          }

          function addMoreBanners() {
            let bannerCount =
              document.querySelectorAll(".form-group").length + 1;
            let bannerInputDiv = document.createElement("div");
            bannerInputDiv.classList.add("form-group");
            bannerInputDiv.innerHTML = `
                  <label for="ban${bannerCount}">Banner ${bannerCount} (URL)</label>
                  <input type="text" id="ban${bannerCount}" placeholder="Enter Image URL for Banner ${bannerCount}" oninput="updatePreview(${bannerCount})">
              `;
            document
              .getElementById("banner-inputs")
              .appendChild(bannerInputDiv);

            // Add corresponding preview image
            let previewDiv = document.querySelector(".banner-preview");
            let previewImage = document.createElement("img");
            previewImage.id = `preview${bannerCount}`;
            previewImage.src = `https://via.placeholder.com/400x150?text=Banner+${bannerCount}`;
            previewImage.alt = `Banner ${bannerCount}`;
            previewDiv.appendChild(previewImage);
          }

          function submitBanners() {
            let banners = [];
            let bannerInputs = document.querySelectorAll("input");
            bannerInputs.forEach((input) => {
              banners.push(input.value);
            });

            if (banners.every((banner) => banner !== "")) {
              alert("Banners updated successfully!");
            } else {
              alert("Please fill in all the fields.");
            }
          }
        </script>
