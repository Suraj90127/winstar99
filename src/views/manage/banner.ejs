    <style>
      body {
        font-family: "Source Sans Pro", sans-serif;
        background-color: #f0f0f0;
        color: #333;
        margin: 0;
        padding: 0;
      }

      .container {
        width: 95%;
        background: rgba(255, 255, 255, 0.9);

        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);

        text-align: center;
      }

      h1 {
        color: #605bff;
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 20px;
      }

      h2 {
        margin-bottom: 20px;
        font-size: 26px;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: #605bff;
      }

      .form-group {
        margin-bottom: 15px;
        text-align: left;
      }

      label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
        color: #333;
        font-size: 14px;
      }

      input {
        width: 100%;
        padding: 10px;
        border: 2px solid #ccc;
        border-radius: 8px;
        font-size: 16px;
        transition: 0.3s ease-in-out;
        outline: none;
      }

      input:focus {
        border-color: #605bff;
        box-shadow: 0 0 8px rgba(96, 91, 255, 0.5);
      }

      .btn {
        width: 100%;
        padding: 12px;
        background: #605bff;
        color: white;
        font-size: 18px;
        font-weight: bold;
        border: none;
        cursor: pointer;
        border-radius: 8px;
        transition: 0.3s ease;
        margin-top: 15px;
      }

      .btn:hover {
        background: #4e4bc1;
        transform: scale(1.05);
      }

      .banner-preview {
        margin-top: 20px;
        padding: 15px;
        background: rgba(255, 255, 255, 0.9);
        border-radius: 10px;
        display: flex;
        flex-direction: column;
        gap: 10px;
      }

      .banner-preview img {
        width: 100%;
        height: 300px;
        object-fit: cover;
        border-radius: 8px;
        transition: 0.3s ease;
        border: 2px solid #ccc;
      }

      .banner-preview img:hover {
        transform: scale(1.05);
      }

      /* Responsive Design */
      @media (max-width: 768px) {
        .container {
          padding: 20px;
          max-width: 100%;
        }

        .btn {
          font-size: 16px;
        }

        .banner-preview img {
          height: 100px;
        }
      }
    </style>
  </head>

