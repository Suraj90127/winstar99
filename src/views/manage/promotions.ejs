    <script>
          
      
        $('.edit-banner').click(function (e) {
            e.preventDefault();
            const phone = $('#phone').val();
            const dregister = $('#dregister').val();
            const damount = $('#damount').val();
            const ddeposit = $('#ddeposit').val();
            const dfirst = $('#dfirst').val();
            
               const tregister = $('#tregister').val();
            const tamount = $('#tamount').val();
            const tdeposit = $('#tdeposit').val();
            const tfirst = $('#tfirst').val();
            const commission = $('#commission').val(); 
            
            const weekBalance = $('#weekBalance').val(); 
            const totalBalance = $('#totalBalance').val(); 
            const direct = $('#direct').val(); 
            const team = $('#team').val(); 
     
     
     
     
            $.ajax({
                type: "POST",
                url: "/api/webapi/update-promotion",
                data: {
                   phone:phone,
                   dregister:dregister,
                   damount:damount,
                   ddeposit:ddeposit,
                   dfirst:dfirst,
                   tregister:tregister,
                   tamount:tamount,
                   tdeposit:tdeposit,
                   tfirst:tfirst,
                   commission:commission,
                   weekBalance:weekBalance,
                   totalBalance:totalBalance,
                   direct:direct,
                   team:team
                },
                dataType: "json",
                success: function (response) {
                    if (response.success == true) {
                        Swal.fire(
                            'Good job!',
                            'Your Links Updated Successfully!',
                            'success'
                        )
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Empty or Wrong',
                        })
                    }
                }
            });
        });


