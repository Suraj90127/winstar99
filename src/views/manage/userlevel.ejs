  <body class="hold-transition sidebar-mini">
    <div class="wrapper">
      <%- include('nav') %>
      <div class="content-wrapper">
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1 class="" style="color: #605bff; font-size: 2rem;  font-weight: bold;">User Promotion List</h1>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
        </section>

        <div class="form-group">
          <div class="d-flex">
            <input
              type="text"
              id="search"
              placeholder="Enter the member you are looking for"
