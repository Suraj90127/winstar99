          <div class="dashboard-card">
            <div class="dashboard-item">
              <h2 id="deposit-number">0</h2>
              <p><i class="fas fa-money-bill-wave"></i> Deposit Number</p>
            </div>
            <div class="dashboard-item">
              <h2 id="deposit-amount">0</h2>
              <p><i class="fas fa-dollar-sign"></i> Deposit Amount</p>
            </div>
            <div class="dashboard-item">
              <h2 id="number-bettor">0</h2>
              <p><i class="fas fa-users"></i> Number of Bettors</p>
            </div>
            <div class="dashboard-item">
              <h2 id="total-bet-amount">0</h2>
              <p><i class="fas fa-chart-line"></i> Total Bet Amount</p>
            </div>
            <div class="dashboard-item">
              <h2 id="first-deposit">0</h2>
              <p><i class="fas fa-user-plus"></i> Number of People Making First Deposit</p>
            </div>
            <div class="dashboard-item">
              <h2 id="total-bet">0</h2>
              <p><i class="fas fa-gavel"></i> Total Bet</p>
            </div>
          </div>

