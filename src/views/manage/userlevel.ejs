    .dashboard-item {
  background: #f3f2ff; /* Soft gradient background */
  height: 150px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center; /* Center content vertically */
  border-radius: 12px; /* Slightly rounded corners for modern look */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1), 0 8px 16px rgba(0, 0, 0, 0.15); /* Softer, larger shadow for depth */
  padding: 15px;
  transition: all 0.3s ease; /* Smooth transition for hover effects */
  margin: 10px; /* Spacing between dashboard items */
}

.dashboard-item:hover {
  transform: translateY(-5px); /* Lift the item slightly on hover */
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2), 0 16px 32px rgba(0, 0, 0, 0.25); /* Darker shadow on hover for more depth */
}

.dashboard-item .icon {
  font-size: 3rem; /* Make the icon large and prominent */
  color: #192434; /* Darker color for the icon */
  margin-bottom: 10px; /* Space between icon and text */
  transition: transform 0.3s ease;
}

.dashboard-item:hover .icon {
  transform: scale(1.1); /* Slightly enlarge the icon on hover */
}

.dashboard-item .text {
  font-size: 1.1rem; /* Slightly larger text */
  color: #192434; /* Dark text color for contrast */
  font-weight: bold;
  text-align: center;
}

.dashboard-item .text span {
  font-size: 1.2rem; /* Make the number or key text stand out */
  color: #374992; /* Highlight the key text with a distinct color */
}


