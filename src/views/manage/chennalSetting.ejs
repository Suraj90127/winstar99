<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Channel Settings</title>

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <!-- Consolidated CSS Links -->

    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=swap"
    />
    <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css" />
    <link rel="stylesheet" href="/dist/css/adminlte.min.css" />
    <link rel="stylesheet" href="/css/admin.css" />
    <link
      href="//cdn.jsdelivr.net/npm/@sweetalert2/theme-dark@4/dark.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      :root {
        --primary-color: #605bff;
        --hover-color: #4a45e5;
        --background-color: #f8f9fa;
        --card-bg: #ffffff;
      }

      body {
        background-color: var(--background-color);
        color: #343a40;
      }

      .content-wrapper {
        background-color: var(--card-bg);
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 4px 24px rgba(0, 0, 0, 0.08);
      }

      .settings-header {
        color: var(--primary-color);
        font-size: 2.25rem;
        font-weight: 700;
        margin-bottom: 2rem;
      }

      .channel-card {
        background: var(--card-bg);
        border-radius: 10px;
        border: 1px solid rgba(0, 0, 0, 0.05);
        margin-bottom: 1.5rem;
        transition: transform 0.2s ease;
      }

      .channel-card:hover {
        transform: translateY(-2px);
      }

      .channel-header {
        background-color: rgba(96, 91, 255, 0.05);
        padding: 1rem 1.5rem;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
      }

      .form-control-custom {
        border: 2px solid #e9ecef;
        border-radius: 8px;
        padding: 0.75rem 1rem;
        transition: all 0.3s ease;
      }

      .form-control-custom:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(96, 91, 255, 0.15);
      }

      .status-toggle {
        display: flex;
        align-items: center;
        gap: 1rem;
      }

      .toggle-switch {
        position: relative;
        display: inline-block;
        width: 60px;
        height: 34px;
      }

      .toggle-switch input {
        opacity: 0;
        width: 0;
        height: 0;
      }

      .toggle-slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: 0.4s;
        border-radius: 34px;
      }

      .toggle-slider:before {
        position: absolute;
        content: "";
        height: 26px;
        width: 26px;
        left: 4px;
        bottom: 4px;
        background-color: white;
        transition: 0.4s;
        border-radius: 50%;
      }

      input:checked + .toggle-slider {
        background-color: var(--primary-color);
      }

      input:checked + .toggle-slider:before {
        transform: translateX(26px);
      }

      .submit-btn {
        background: var(--primary-color);
        color: white;
        padding: 0.75rem 2rem;
        border-radius: 8px;
        border: none;
        font-weight: 600;
        transition: all 0.3s ease;
        width: 100%;
        max-width: 200px;
      }

      .submit-btn:hover {
        background: var(--hover-color);
        transform: translateY(-1px);
      }

      @media (max-width: 768px) {
        .content-wrapper {
          padding: 1rem;
        }

        .settings-header {
          font-size: 1.75rem;
        }

        .channel-card {
          margin-bottom: 1rem;
        }
      }
    </style>
  </head>

  <body class="hold-transition sidebar-mini">
    <div class="wrapper">
      <%- include('nav') %>
      <div class="content-wrapper">
        <section class="content-header">
          <div class="container-fluid">
            <h1 class="settings-header">Channel Settings</h1>
          </div>
        </section>

        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-8 col-xl-6 mx-auto">
              <div class="channel-card">
                <div class="channel-header">
                  <h5 class="mb-0">Channel 1</h5>
                </div>
                <div class="card-body">
                  <div class="mb-3">
                    <label class="form-label">Channel Name</label>
                    <input
                      type="text"
                      class="form-control form-control-custom"
                      id="chennal1"
                    />
                  </div>
                  <div class="status-toggle">
                    <label class="form-label">Status</label>
                    <label class="toggle-switch">
                      <input type="checkbox" id="status1" />
                      <span class="toggle-slider"></span>
                    </label>
                  </div>
                </div>
              </div>

              <div class="channel-card">
                <div class="channel-header">
                  <h5 class="mb-0">Channel 2</h5>
                </div>
                <div class="card-body">
                  <div class="mb-3">
                    <label class="form-label">Channel Name</label>
                    <input
                      type="text"
                      class="form-control form-control-custom"
                      id="chennal2"
                    />
                  </div>
                  <div class="status-toggle">
                    <label class="form-label">Status</label>
                    <label class="toggle-switch">
                      <input type="checkbox" id="status2" />
                      <span class="toggle-slider"></span>
                    </label>
                  </div>
                </div>
              </div>

              <div class="channel-card">
                <div class="channel-header">
                  <h5 class="mb-0">Channel 3</h5>
                </div>
                <div class="card-body">
                  <div class="mb-3">
                    <label class="form-label">Channel Name</label>
                    <input
                      type="text"
                      class="form-control form-control-custom"
                      id="chennal3"
                    />
                  </div>
                  <div class="status-toggle">
                    <label class="form-label">Status</label>
                    <label class="toggle-switch">
                      <input type="checkbox" id="status3" />
                      <span class="toggle-slider"></span>
                    </label>
                  </div>
                </div>
              </div>
              <div class="channel-card">
                <div class="channel-header">
                  <h5 class="mb-0">SG Pay Api Key</h5>
                </div>
                <div class="card-body">
                  <div class="mb-3">
                    <label class="form-label">Api Key</label>
                    <input
                      type="text"
                      class="form-control form-control-custom"
                      id="api-key"
                    />
                  </div>
                </div>
              </div>

              <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                <button class="submit-btn edit-banner" type="button">
                  <span class="submit-text">Save Changes</span>
                  <span
                    class="spinner-border spinner-border-sm d-none"
                    role="status"
                  ></span>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="/plugins/jquery/jquery.min.js"></script>
    <script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/dist/js/adminlte.min.js"></script>
    <script src="/js/admin/admin.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>

    <!-- Scripts -->

    <script>
      // Initialize settings
      function loadSettings() {
  fetch("/api/webapi/banner")
    .then((response) => response.json())
    .then((data) => {
      const channel = data.chennal;
      console.log("ddd", channel);

      $("#api-key").val(channel.key_id); // If needed

      ["1", "2", "3"].forEach((num) => {
        $(`#chennal${num}`).val(channel[`chennal${num}`]);
        $(`#status${num}`).prop("checked", String(channel[`status${num}`]) === "1");
      });
    })
    .catch((error) => showError("Failed to load settings"));
}


      // Save settings
      function saveSettings() {
        const btn = $(".edit-banner");
        btn.prop("disabled", true);
        btn.find(".submit-text").addClass("d-none");
        btn.find(".spinner-border").removeClass("d-none");

        const settings = {
          chennal1: $("#chennal1").val(),
          status1: $("#status1").prop("checked") ? "1" : "0",
          chennal2: $("#chennal2").val(),
          status2: $("#status2").prop("checked") ? "1" : "0",
          chennal3: $("#chennal3").val(),
          status3: $("#status3").prop("checked") ? "1" : "0",
          apiKey: $("#api-key").val(),
        };

        fetch("/api/webapi/update-chennal", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(settings),
        })
          .then((response) => response.json())
          .then((data) => {
            if (data.status) {
              Swal.fire(
                "Success!",
                "Settings updated successfully!",
                "success"
              );
            } else {
              throw new Error(data.message || "Update failed");
            }
          })
          .catch((error) => showError(error.message))
          .finally(() => {
            btn.prop("disabled", false);
            btn.find(".submit-text").removeClass("d-none");
            btn.find(".spinner-border").addClass("d-none");
          });
      }

      function showError(message) {
        Swal.fire({
          icon: "error",
          title: "Oops...",
          text: message || "Something went wrong!",
          confirmButtonColor: "#605bff",
        });
      }

      // Event Listeners
      $(document).ready(loadSettings);
      $(".edit-banner").click(saveSettings);
    </script>
  </body>
</html>
