      <script>
        // Fetch and display the VIP data
        async function fetchVipData() {
          try {
            const response = await fetch('/api/webapi/vip-data');
            const responseData = await response.json(); // Convert response to JSON
            console.log("object111111111", responseData);
      
            if (responseData.success) {
              const data = responseData.data;
              const tableBody = document.getElementById('levels-table-body');
              tableBody.innerHTML = ''; // Clear existing rows
      
              data.forEach(item => {
                const row = document.createElement('tr');
                row.innerHTML = `
                  <td>${item.level}</td>
                  <td><input type="number" value="${item.amount}" data-id="${item.id}" class="amount"></td>
                  <td><input type="number" value="${item.onetime}" data-id="${item.id}" class="onetime"></td>
                  <td>${item.level}</td>
                  <td><input type="number" value="${item.monthstime}" data-id="${item.id}" class="monthstime"></td>
                  <td><input type="number" value="${item.rebet}" data-id="${item.id}" class="rebet"></td>
                  <td><input type="number" value="${item.sefe}" data-id="${item.id}" class="sefe"></td>
                  <td><button class="update-btn" data-id="${item.id}">Update</button></td>
                `;
                tableBody.appendChild(row);
              });
            } else {
              Swal.fire('Error', 'Could not load data', 'error');
            }
          } catch (error) {
            console.error('Error fetching data:', error);
            Swal.fire('Error', 'Something went wrong', 'error');
          }
        }
      
        // Event listener for Update buttons
        document.getElementById('levels-table-body').addEventListener('click', async (e) => {
          if (e.target.classList.contains('update-btn')) {
            const row = e.target.closest('tr');
            const id = e.target.dataset.id;
            const level = `level${row.querySelector('td').textContent}`;
            const amount = row.querySelector('.amount').value;
            const onetime = row.querySelector('.onetime').value;
            const monthstime = row.querySelector('.monthstime').value;
            const rebet = row.querySelector('.rebet').value;
            const sefe = row.querySelector('.sefe').value;
      
            const updatedData = {
              id,
              level,
              amount,
              onetime,
              monthstime,
              rebet,
              sefe
            };
      
            try {
              const response = await fetch('/api/webapi/set-vip-data', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json'
                },
                body: JSON.stringify(updatedData)
              });

              
              // console.log("updatedData",updatedData)
              const responseData = await response.json();
      
              if (responseData.status) {
                Swal.fire('Success', 'Data updated successfully', 'success');
              } else {
                Swal.fire('Error', 'Failed to update data', 'error');
              }
            } catch (error) {
              console.error('Error updating data:', error);
              Swal.fire('Error', 'Something went wrong', 'error');
            }
          }
        });
      
        // Initial fetch of data
        fetchVipData();
      </script>
        
  
      <script>
        // Fetch data on page load and populate the table
        window.onload = async () => {
          try {
            const response = await axios.get('/api/webapi/vip-data');
            if (response.data.success) {
              const data = response.data.data;
              const tbody = document.querySelector('#edit-levels tbody');
              tbody.innerHTML = ''; // Clear existing rows
      
              data.forEach((item, index) => {
                const row = document.createElement('tr');
                row.innerHTML = `
                  <td>${index + 1}</td>
                  <td><input type="number" value="${item.amount}" data-id="${item.id}"></td>
                  <td><input type="number" value="${item.onetime}" data-id="${item.id}"></td>
                  <td>${item.level}</td>
                  <td><input type="number" value="${item.monthstime}" data-id="${item.id}"></td>
                  <td><input type="number" value="${item.rebet}" data-id="${item.id}"></td>
                  <td><button class="update-btn" data-id="${item.id}">Update</button></td>
                `;
                tbody.appendChild(row);
              });
            }
          } catch (error) {
            console.error('Error fetching VIP data:', error);
          }
        };
      
        // Handle update button click
        document.addEventListener('click', async (e) => {
          if (e.target && e.target.classList.contains('update-btn')) {
            const row = e.target.closest('tr');
            const id = e.target.dataset.id;
            const amount = row.querySelector('input[type="number"]:nth-child(2)').value;
            const onetime = row.querySelector('input[type="number"]:nth-child(3)').value;
            const monthstime = row.querySelector('input[type="number"]:nth-child(5)').value;
            const rebet = row.querySelector('input[type="number"]:nth-child(6)').value;
      
            try {
              const response = await axios.post('/api/webapi/set-vip-data', {
                id,
                amount,
                onetime,
                monthstime,
                rebet,
              });
              
              if (response.data.success) {
                Swal.fire('Success', 'Data updated successfully', 'success');
              } else {
                Swal.fire('Error', 'Failed to update data', 'error');
              }
            } catch (error) {
              console.error('Error updating data:', error);
              Swal.fire('Error', 'An error occurred while updating data', 'error');
            }
          }
        });
      </script>
      
