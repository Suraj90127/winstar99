<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Modify Bank Information</title>

  <!-- Google Fonts -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" crossorigin="anonymous" />

  <!-- Bootstrap & AdminLTE -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/dist/css/adminlte.min.css">
  <link rel="stylesheet" href="/css/admin.css">

  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  
  <!-- SweetAlert2 -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

  <style>
    body {
      background-color: #f4f6f9;
      color: #343a40;
      font-family: 'Source Sans Pro', sans-serif;
    }
    .card {
      border-radius: 12px;
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
      background: #ffffff;
    }
    .table th {
      background-color: #605bff;
      color: white;
    }
    .table-striped tbody tr:nth-of-type(odd) {
      background-color: #f3f2ff;
    }
    .btn-primary {
      background-color: #605bff;
      border-color: #605bff;
    }
    .btn-primary:hover {
      background-color: #4a44c4;
      border-color: #4a44c4;
    }
    .table img {
      width: 80px;
      height: 80px;
      object-fit: cover;
      cursor: pointer;
      border-radius: 8px;
      transition: transform 0.3s;
    }
    .table img:hover {
      transform: scale(1.05);
    }
    .action-buttons {
      display: flex;
      gap: 5px;
      justify-content: center;
    }
    .btn-sm {
      padding: 0.25rem 0.5rem;
      font-size: 0.875rem;
    }
    .modal-img-container {
      max-height: 70vh;
      overflow: auto;
    }
    .modal-img-container img {
      max-width: 100%;
      height: auto;
    }
  </style>
</head>

<body class="hold-transition sidebar-mini">
  <div class="wrapper">
    <%- include('../nav') %> <!-- Include the navigation bar -->

    <div class="content-wrapper">
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1 class="text-dark">Modify Bank Information</h1>
            </div>
          </div>
        </div>
      </section>
      
      <section class="content">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Bank Modification Details</h3>
          </div>
          <div class="card-body p-0 table-responsive">
            <table class="table table-striped projects">
              <thead>
                <tr class="text-center">
                  <th>#</th>
                  <th>Old Bank</th>
                  <th>Old Beneficiary</th>
                  <th>Old Account No</th>
                  <th>New Bank</th>
                  <th>New Beneficiary</th>
                  <th>New Account No</th>
                  <th>Identity Card</th>
                  <th>Old Passbook</th>
                  <th>New Passbook</th>
                  <th>Deposit Proof</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody id="bankTable">
                <tr>
                  <td colspan="12" class="text-center">Loading data...</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </section>
    </div>
  </div>

  <!-- Image Popup Modal -->
  <div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Image Preview</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body text-center modal-img-container">
          <img id="modalImage" src="" class="img-fluid" alt="Preview">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/dist/js/adminlte.min.js"></script>
  <script src="/js/admin/admin.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
    $(document).ready(function () {
      // Load bank modifications
      function loadBankModifications() {
        $.ajax({
          type: "GET",
          url: "/api/webapi/bankdetails",
          dataType: "json",
          success: function (response) {
            let html = "";
            
            if (response.data && response.data.length > 0) {
              response.data.forEach((data, index) => {
                // Handle empty image cases
                const identityCardImg = data.IdentityCard || '/dist/img/no-image.png';
                const oldPassbookImg = data.OldPassbook || '/dist/img/no-image.png';
                const newPassbookImg = data.NewPassbook || '/dist/img/no-image.png';
                const depositProofImg = data.LatestDeposit || '/dist/img/no-image.png';
                
                html += `
                  <tr class="text-center">
                    <td>${index + 1}</td>
                    <td>${data.OldBankName || 'N/A'}</td>
                    <td>${data.OldBeneficiaryName || 'N/A'}</td>
                    <td>${data.OldAccountNumber || 'N/A'}</td>
                    <td>${data.NewBankName || 'N/A'}</td>
                    <td>${data.NewBeneficiaryName || 'N/A'}</td>
                    <td>${data.NewAccountNumber || 'N/A'}</td>
                    <td><img src="${identityCardImg}" class="preview-img" data-bs-toggle="modal" data-bs-target="#imageModal" onclick="showImage('${identityCardImg}')"></td>
                    <td><img src="${oldPassbookImg}" class="preview-img" data-bs-toggle="modal" data-bs-target="#imageModal" onclick="showImage('${oldPassbookImg}')"></td>
                    <td><img src="${newPassbookImg}" class="preview-img" data-bs-toggle="modal" data-bs-target="#imageModal" onclick="showImage('${newPassbookImg}')"></td>
                    <td><img src="${depositProofImg}" class="preview-img" data-bs-toggle="modal" data-bs-target="#imageModal" onclick="showImage('${depositProofImg}')"></td>
                    <td class="action-buttons">
                      <button class="btn btn-success btn-sm approve-btn" data-id="${data.id}"><i class="fas fa-check"></i></button>
                      <button class="btn btn-danger btn-sm delete-btn" data-id="${data.id}"><i class="fas fa-trash"></i></button>
                    </td>
                  </tr>`;
              });
            } else {
              html = `<tr><td colspan="12" class="text-center">No bank modification requests found</td></tr>`;
            }
            
            $("#bankTable").html(html);
          },
          error: function(xhr, status, error) {
            console.error("Error loading bank details:", error);
            $("#bankTable").html(`<tr><td colspan="12" class="text-center text-danger">Error loading data. Please try again.</td></tr>`);
          }
        });
      }

      // Show image in modal
      window.showImage = function(imgSrc) {
        $("#modalImage").attr("src", imgSrc);
      };

      // Approve Action
$(document).on("click", ".approve-btn", function () {
  let id = $(this).data("id");

  Swal.fire({
    title: "Are you sure?",
    text: "You are about to approve this request!",
    icon: "warning",
    showCancelButton: true,
    confirmButtonColor: "#28a745",
    cancelButtonColor: "#d33",
    confirmButtonText: "Yes, Approve!",
    cancelButtonText: "Cancel",
    reverseButtons: true
  }).then((result) => {
    if (result.isConfirmed) {
      $.ajax({
        type: "POST",
        url: `/api/webapi/bankstatus/accepted/${id}`,  // Correct route for approve action
        dataType: "json",
        success: function (response) {
          Swal.fire({
            title: "Approved!",
            text: "The request has been approved.",
            icon: "success",
            confirmButtonColor: "#28a745"
          });
          loadBankModifications();  // Refresh the list of bank modifications
        },
        error: function(xhr, status, error) {
          Swal.fire({
            title: "Error!",
            text: "Failed to approve request. Please try again.",
            icon: "error",
            confirmButtonColor: "#d33"
          });
        }
      });
    }
  });
});

// Delete Action
$(document).on("click", ".delete-btn", function () {
  let id = $(this).data("id");

  Swal.fire({
    title: "Are you sure?",
    text: "This will permanently delete the request.",
    icon: "warning",
    showCancelButton: true,
    confirmButtonColor: "#d33",
    cancelButtonColor: "#6c757d",
    confirmButtonText: "Yes, Delete!",
    cancelButtonText: "Cancel",
    reverseButtons: true
  }).then((result) => {
    if (result.isConfirmed) {
      $.ajax({
        type: "POST",
        url: `/api/webapi/bankstatus/rejected/${id}`,  // Correct route for delete action
        dataType: "json",
        success: function (response) {
          Swal.fire({
            title: "Deleted!",
            text: "The request has been removed.",
            icon: "success",
            confirmButtonColor: "#28a745"
          });
          loadBankModifications();  // Refresh the list of bank modifications
        },
        error: function(xhr, status, error) {
          Swal.fire({
            title: "Error!",
            text: "Failed to delete request. Please try again.",
            icon: "error",
            confirmButtonColor: "#d33"
          });
        }
      });
    }
  });
});

   
      // Initial load
      loadBankModifications();
    });
  </script>
</body>
</html>