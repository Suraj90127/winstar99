<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Deposit Not Received</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="/dist/css/adminlte.min.css">
  <link rel="stylesheet" href="/css/admin.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

  <style>
    body {
      background-color: #f4f6f9;
      color: #343a40;
      font-family: 'Source Sans Pro', sans-serif;
    }
    .card {
      border-radius: 12px;
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
      background: #ffffff;
    }
    .card-title {
      color: #605bff;
      font-size: 22px;
      font-weight: bold;
    }
    .table th {
      background-color: #605bff;
      color: white;
      vertical-align: middle;
    }
    .table-striped tbody tr:nth-of-type(odd) {
      background-color: #f3f2ff;
    }
    .btn-primary {
      background-color: #605bff;
      border-color: #605bff;
    }
    .btn-primary:hover {
      background-color: #4a44c4;
      border-color: #4a44c4;
    }
    /* Image Styling */
    .deposit-img {
      width: 80px;
      height: 80px;
      object-fit: cover;
      cursor: pointer;
      border-radius: 5px;
      transition: transform 0.3s;
      border: 1px solid #ddd;
    }
    .deposit-img:hover {
      transform: scale(1.1);
    }
    /* Status Badges */
    .badge-pending {
      background-color: #ffc107;
      color: #212529;
    }
    .badge-completed {
      background-color: #28a745;
      color: white;
    }
    .badge-rejected {
      background-color: #dc3545;
      color: white;
    }
    /* Action Buttons */
    .action-buttons {
      display: flex;
      gap: 5px;
      justify-content: center;
    }
    .btn-sm {
      padding: 0.25rem 0.5rem;
      font-size: 0.875rem;
    }
    /* Modal Styling */
    .modal-content {
      border-radius: 10px;
      border: none;
    }
    .modal-header {
      background-color: #605bff;
      color: white;
      border-radius: 10px 10px 0 0;
    }
    .modal-title {
      font-weight: 600;
    }
    .btn-close {
      filter: invert(1);
    }
    /* Loading Spinner */
    .loading-spinner {
      display: none;
      text-align: center;
      padding: 20px;
    }
    .spinner-border {
      color: #605bff;
    }
  </style>
</head>

<body class="hold-transition sidebar-mini">
  <div class="wrapper">
    <%- include('../nav') %>
    <div class="content-wrapper">
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1 class="text-dark">Game problem</h1>
            </div>
          </div>
        </div>
      </section>
      
      <section class="content">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">game Details</h3>
          </div>
          <div class="card-body p-0 table-responsive">
            <div class="loading-spinner">
              <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
              </div>
              <p class="mt-2">Loading deposits...</p>
            </div>
            <table class="table table-striped projects">
              <thead>
                <tr>
                  <th class="text-center">#</th>
                  <th class="text-center">Problem</th>
                  <th class="text-center">Image</th>
                  
                  <th class="text-center">Action</th>
                </tr>
              </thead>
              <tbody id="depositTable"></tbody>
            </table>
          </div>
        </div>
      </section>
    </div>
  </div>

  <!-- Image Popup Modal -->
  <div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Deposit Proof</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body text-center">
          <img id="modalImage" src="" class="img-fluid rounded" alt="Deposit Proof" style="max-height: 70vh;">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <script src="/plugins/jquery/jquery.min.js"></script>
  <script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/dist/js/adminlte.min.js"></script>
  <script src="/js/admin/admin.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
    $(document).ready(function () {
      // Show loading spinner
      $('.loading-spinner').show();
      
      function loadDeposits() {
        $.ajax({
          type: "GET",
          url: "/api/webapi/problemsdetails",
          success: function (response) {
            $('.loading-spinner').hide();
            let html = "";
            
            if (response.data && response.data.length > 0) {
              response.data.forEach((data, index) => {
                // Determine badge class based on status
                let badgeClass = 'badge-pending';
                if (data.status === 'Completed') badgeClass = 'badge-completed';
                if (data.status === 'Rejected') badgeClass = 'badge-rejected';
                
                html += `
                  <tr>
                    <td class="text-center">${index + 1}</td>
                    <td class="text-center">${data.Content}</td>
                 
                    <td class="text-center">
                      ${data.Photo ? `<img src="${data.Photo}" class="deposit-img" onclick="openImage('${data.Photo}')">` : 'N/A'}
                    </td>
                 
                    <td class="text-center">
                      <div class="action-buttons">
                        ${data.status !== 'Completed' ? `
                          <button class="btn btn-success btn-sm confirm-btn" data-id="${data.id}" title="Confirm Deposit">
                            <i class="fas fa-check"></i>
                          </button>
                        ` : ''}
                        <button class="btn btn-danger btn-sm delete-btn" data-id="${data.id}" title="Delete Deposit">
                          <i class="fas fa-trash"></i>
                        </button>
                      </div>
                    </td>
                  </tr>`;
              });
            } else {
              html = `<tr><td colspan="10" class="text-center py-4">No deposit records found</td></tr>`;
            }
            
            $("#depositTable").html(html);
          },
          error: function() {
            $('.loading-spinner').hide();
            $("#depositTable").html(`<tr><td colspan="10" class="text-center py-4 text-danger">Error loading deposits</td></tr>`);
          }
        });
      }

      loadDeposits();

      // Open Image in Bootstrap Modal
      window.openImage = function (imgSrc) {
        $("#modalImage").attr("src", imgSrc);
        $("#imageModal").modal("show");
      };

      // Confirm Button Click Event
$(document).on('click', '.confirm-btn', function() {
  const depositId = $(this).data('id');
  const button = $(this);
  
  Swal.fire({
    title: 'Confirm Deposit',
    text: "Are you sure you want to confirm this deposit?",
    icon: 'question',
    showCancelButton: true,
    confirmButtonColor: '#28a745',
    cancelButtonColor: '#6c757d',
    confirmButtonText: 'Yes, confirm',
    cancelButtonText: 'Cancel',
    reverseButtons: true
  }).then((result) => {
    if (result.isConfirmed) {
      // Show loading on button
      button.html('<i class="fas fa-spinner fa-spin"></i>');
      button.prop('disabled', true);
      
      $.ajax({
        type: "POST",
        url: `/api/webapi/problemsstatus/accepted/${depositId}`, // Adjusted route for confirming the deposit
        success: function (response) {
          Swal.fire({
            title: 'Confirmed!',
            text: 'The deposit has been confirmed successfully.',
            icon: 'success',
            timer: 2000,
            showConfirmButton: false
          });
          loadDeposits();  // Refresh the deposits list
        },
        error: function(xhr) {
          Swal.fire({
            title: 'Error!',
            text: xhr.responseJSON?.message || 'Failed to confirm deposit',
            icon: 'error'
          });
          button.html('<i class="fas fa-check"></i>');
          button.prop('disabled', false);
        }
      });
    }
  });
});



     
// Delete Button Click Event
$(document).on('click', '.delete-btn', function() {
  const depositId = $(this).data('id');
  const button = $(this);
  
  Swal.fire({
    title: 'Delete Deposit',
    text: "Are you sure you want to delete this deposit record? This action cannot be undone.",
    icon: 'warning',
    showCancelButton: true,
    confirmButtonColor: '#dc3545',
    cancelButtonColor: '#6c757d',
    confirmButtonText: 'Yes, delete',
    cancelButtonText: 'Cancel',
    reverseButtons: true
  }).then((result) => {
    if (result.isConfirmed) {
      // Show loading on button
      button.html('<i class="fas fa-spinner fa-spin"></i>');
      button.prop('disabled', true);
      
      $.ajax({
        type: "POST",
        url: `/api/webapi/problemsstatus/rejected/${depositId}`,  // Adjusted route for deleting deposit
        success: function (response) {
          Swal.fire({
            title: 'Deleted!',
            text: 'The deposit record has been deleted.',
            icon: 'success',
            timer: 2000,
            showConfirmButton: false
          });
          loadDeposits();  // Refresh the deposits list
        },
        error: function(xhr) {
          Swal.fire({
            title: 'Error!',
            text: xhr.responseJSON?.message || 'Failed to delete deposit',
            icon: 'error'
          });
          button.html('<i class="fas fa-trash"></i>');
          button.prop('disabled', false);
        }
      });
    }
  });
});



    });
  </script>

</body>
</html>