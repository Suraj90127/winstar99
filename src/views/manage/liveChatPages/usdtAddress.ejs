<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>USDT Address Management</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <link rel="stylesheet" href="/dist/css/adminlte.min.css">
  <link rel="stylesheet" href="/css/admin.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <style>
    body {
      background-color: #f4f6f9;
      color: #343a40;
      font-family: 'Source Sans Pro', sans-serif;
    }
    .card {
      border-radius: 12px;
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
      background: #ffffff;
    }
    .card-header {
      border-radius: 12px 12px 0 0 !important;
    }
    .card-title {
      color: #605bff;
      font-size: 22px;
      font-weight: bold;
    }
    .table-responsive {
      overflow-x: auto;
    }
    .table th {
      background-color: #605bff;
      color: white;
      vertical-align: middle;
    }
    .table-striped tbody tr:nth-of-type(odd) {
      background-color: #f3f2ff;
    }
    .img-thumbnail {
      width: 80px;
      height: 80px;
      cursor: pointer;
      object-fit: cover;
      border-radius: 5px;
      border: 1px solid #ddd;
      transition: transform 0.3s;
    }
    .img-thumbnail:hover {
      transform: scale(1.1);
    }
    .btn-primary {
      background-color: #605bff;
      border-color: #605bff;
    }
    .btn-primary:hover {
      background-color: #4a44c4;
      border-color: #4a44c4;
    }
    .action-buttons {
      display: flex;
      gap: 5px;
      justify-content: center;
    }
    .btn-sm {
      padding: 0.25rem 0.5rem;
      font-size: 0.875rem;
    }
    /* Modal Styling */
    .modal-content {
      border-radius: 10px;
      border: none;
    }
    .modal-header {
      background-color: #605bff;
      color: white;
      border-radius: 10px 10px 0 0;
    }
    .modal-title {
      font-weight: 600;
    }
    .btn-close {
      filter: invert(1);
    }
    /* Loading Spinner */
    .loading-spinner {
      display: none;
      text-align: center;
      padding: 20px;
    }
    .spinner-border {
      color: #605bff;
    }
    /* Status Badges */
    .badge-pending {
      background-color: #ffc107;
      color: #212529;
    }
    .badge-approved {
      background-color: #28a745;
      color: white;
    }
    .badge-rejected {
      background-color: #dc3545;
      color: white;
    }
  </style>
</head>

<body class="hold-transition sidebar-mini">
  <div class="wrapper">
    <%- include('../nav') %>
    <div class="content-wrapper">
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1 class="text-dark">USDT Address Management</h1>
            </div>
            <div class="col-sm-6 text-right">
              <button class="btn btn-primary" id="addNewBtn">
                <i class="fas fa-plus-circle"></i> Add New Address
              </button>
            </div>
          </div>
        </div>
      </section>
      
      <section class="content">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">USDT Address Details</h3>
          </div>
          <div class="card-body p-0 table-responsive">
            <div class="loading-spinner">
              <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
              </div>
              <p class="mt-2">Loading USDT addresses...</p>
            </div>
            <table class="table table-striped projects">
              <thead>
                <tr>
                  <th class="text-center">#</th>
                  <th class="text-center">Tiranga ID</th>
                  <th class="text-center">USDT Address</th>
                  <th class="text-center">Status</th>
                  <th class="text-center">USDT Address Screenshot</th>
                  <th class="text-center">Identity Card</th>
                  <th class="text-center">Latest Deposit Receipt</th>
                  <th class="text-center">Created At</th>
                  <th class="text-center">Action</th>
                </tr>
              </thead>
              <tbody id="usdtTable"></tbody>
            </table>
          </div>
        </div>
      </section>
    </div>
  </div>

  <!-- Image Popup Modal -->
  <div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Document Preview</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body text-center">
          <img id="modalImage" src="" class="img-fluid rounded" style="max-height: 70vh;">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Add/Edit USDT Address Modal -->
  <div class="modal fade" id="usdtModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modalTitle">Add USDT Address</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="usdtForm">
            <input type="hidden" id="usdtId">
            <div class="form-group">
              <label for="tirangaId">Tiranga ID</label>
              <input type="text" class="form-control" id="tirangaId" required>
            </div>
            <div class="form-group">
              <label for="usdtAddress">USDT Address</label>
              <input type="text" class="form-control" id="usdtAddress" required>
            </div>
            <div class="form-group">
              <label>Status</label>
              <select class="form-control" id="status">
                <option value="Pending">Pending</option>
                <option value="Approved">Approved</option>
                <option value="Rejected">Rejected</option>
              </select>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" id="saveBtn">Save Changes</button>
        </div>
      </div>
    </div>
  </div>

  <script src="/plugins/jquery/jquery.min.js"></script>
  <script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/dist/js/adminlte.min.js"></script>
  <script src="/js/admin/admin.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
    $(document).ready(function () {
      // Show loading spinner
      $('.loading-spinner').show();
      
      // Load USDT addresses
      function loadUSDTAddresses() {
        $.ajax({
          url: "/api/webapi/usdtdetails",
          type: "GET",
          dataType: "json",
          success: function(response) {
            $('.loading-spinner').hide();
            
            if (response.success && response.data && response.data.length > 0) {
              let html = "";
              response.data.forEach((usdt, index) => {
                // Determine badge class based on status
                let badgeClass = 'badge-pending';
                if (usdt.status === 'Approved') badgeClass = 'badge-approved';
                if (usdt.status === 'Rejected') badgeClass = 'badge-rejected';
                
                html += `
                  <tr class="text-center">
                    <td>${index + 1}</td>
                    <td>${usdt.TirangaID || "-"}</td>
                    <td>${usdt.USDTWalletAddress || "-"}</td>
                    <td><span class="badge ${badgeClass}">${usdt.status || "Pending"}</span></td>
                    <td>
                      ${usdt.AddressScreenshot ? 
                        `<img src="${usdt.AddressScreenshot}" class="img-thumbnail open-popup" data-src="${usdt.AddressScreenshot}">` : 
                        '<span class="text-muted">N/A</span>'}
                    </td>
                    <td>
                      ${usdt.IdentityCard ? 
                        `<img src="${usdt.IdentityCard}" class="img-thumbnail open-popup" data-src="${usdt.IdentityCard}">` : 
                        '<span class="text-muted">N/A</span>'}
                    </td>
                    <td>
                      ${usdt.LatestDeposit ? 
                        `<img src="${usdt.LatestDeposit}" class="img-thumbnail open-popup" data-src="${usdt.LatestDeposit}">` : 
                        '<span class="text-muted">N/A</span>'}
                    </td>
                    <td>${new Date(usdt.created_at).toLocaleString() || "-"}</td>
                    <td>
                      <div class="action-buttons">
                        ${usdt.status !== 'Approved' ? `
                          <button class="btn btn-success btn-sm approve-btn" data-id="${usdt.id}" title="Approve">
                            <i class="fas fa-check"></i>
                          </button>
                        ` : ''}
                        <button class="btn btn-primary btn-sm edit-btn" data-id="${usdt.id}" title="Edit">
                          <i class="fas fa-edit"></i>
                        </button>
                        <button class="btn btn-danger btn-sm delete-btn" data-id="${usdt.id}" title="Delete">
                          <i class="fas fa-trash"></i>
                        </button>
                      </div>
                    </td>
                  </tr>
                `;
              });
              $("#usdtTable").html(html);
            } else {
              $("#usdtTable").html(`
                <tr>
                  <td colspan="9" class="text-center py-4">
                    No USDT addresses found. Click "Add New Address" to create one.
                  </td>
                </tr>
              `);
            }
          },
          error: function(xhr) {
            $('.loading-spinner').hide();
            $("#usdtTable").html(`
              <tr>
                <td colspan="9" class="text-center py-4 text-danger">
                  Error loading USDT addresses. Please try again later.
                </td>
              </tr>
            `);
            console.error("Error loading USDT addresses:", xhr.responseText);
          }
        });
      }

      // Initial load
      loadUSDTAddresses();

      // Image popup handler
      $(document).on("click", ".open-popup", function() {
        const imgSrc = $(this).data("src");
        if (imgSrc) {
          $("#modalImage").attr("src", imgSrc);
          $("#imageModal").modal("show");
        }
      });

      // Add new button handler
      $("#addNewBtn").click(function() {
        $("#usdtForm")[0].reset();
        $("#modalTitle").text("Add USDT Address");
        $("#usdtModal").modal("show");
      });

      // Edit button handler
      $(document).on("click", ".edit-btn", function() {
        const usdtId = $(this).data("id");
        
        // Show loading
        const button = $(this);
        button.html('<i class="fas fa-spinner fa-spin"></i>');
        button.prop('disabled', true);
        
        $.ajax({
          url: `/api/webapi/usdtdetails/${usdtId}`,
          type: "GET",
          success: function(response) {
            if (response.success && response.data) {
              const usdt = response.data;
              $("#usdtId").val(usdt.id);
              $("#tirangaId").val(usdt.TirangaID);
              $("#usdtAddress").val(usdt.USDTWalletAddress);
              $("#status").val(usdt.status || "Pending");
              
              $("#modalTitle").text("Edit USDT Address");
              $("#usdtModal").modal("show");
            } else {
              Swal.fire({
                title: 'Error!',
                text: response.message || 'Failed to load USDT address details',
                icon: 'error'
              });
            }
          },
          error: function(xhr) {
            Swal.fire({
              title: 'Error!',
              text: xhr.responseJSON?.message || 'Failed to load USDT address details',
              icon: 'error'
            });
          },
          complete: function() {
            button.html('<i class="fas fa-edit"></i>');
            button.prop('disabled', false);
          }
        });
      });

      // Save handler
      $("#saveBtn").click(function() {
        const formData = {
          TirangaID: $("#tirangaId").val(),
          USDTWalletAddress: $("#usdtAddress").val(),
          status: $("#status").val(),
          id: $("#usdtId").val() || null
        };

        // Validate
        if (!formData.TirangaID || !formData.USDTWalletAddress) {
          Swal.fire({
            title: 'Validation Error!',
            text: 'Please fill in all required fields',
            icon: 'warning'
          });
          return;
        }

        // Show loading
        const button = $(this);
        button.html('<i class="fas fa-spinner fa-spin"></i>');
        button.prop('disabled', true);
        
        const isEdit = !!formData.id;
        const method = isEdit ? "PUT" : "POST";
        const url = isEdit ? `/api/webapi/usdtdetails/${formData.id}` : "/api/webapi/usdtdetails";

        $.ajax({
          url: url,
          type: method,
          contentType: "application/json",
          data: JSON.stringify(formData),
          success: function(response) {
            if (response.success) {
              Swal.fire({
                title: 'Success!',
                text: isEdit ? 'USDT address updated successfully' : 'USDT address added successfully',
                icon: 'success',
                timer: 1500,
                showConfirmButton: false
              });
              $("#usdtModal").modal("hide");
              loadUSDTAddresses();
            } else {
              Swal.fire({
                title: 'Error!',
                text: response.message || 'Operation failed',
                icon: 'error'
              });
            }
          },
          error: function(xhr) {
            Swal.fire({
              title: 'Error!',
              text: xhr.responseJSON?.message || 'Operation failed',
              icon: 'error'
            });
          },
          complete: function() {
            button.html('Save Changes');
            button.prop('disabled', false);
          }
        });
      });

      // Approve button handler
      $(document).on("click", ".approve-btn", function() {
    const usdtId = $(this).data("id");

    Swal.fire({
        title: 'Approve USDT Address?',
        text: "Are you sure you want to approve this USDT address?",
        icon: 'question',
        showCancelButton: true,
        confirmButtonColor: '#28a745',
        cancelButtonColor: '#6c757d',
        confirmButtonText: 'Yes, approve',
        cancelButtonText: 'Cancel',
        reverseButtons: true
    }).then((result) => {
        if (result.isConfirmed) {
            const button = $(this);
            button.html('<i class="fas fa-spinner fa-spin"></i>');
            button.prop('disabled', true);

            $.ajax({
                url: `/api/webapi/addressstatus/accepted/${usdtId}`,
                type: "POST",
                success: function(response) {
                    if (response.success) {
                        Swal.fire({
                            title: 'Approved!',
                            text: 'USDT address has been approved',
                            icon: 'success',
                            timer: 1500,
                            showConfirmButton: false
                        });
                        loadUSDTAddresses();
                    } else {
                        Swal.fire({
                            title: 'Error!',
                            text: response.message || 'Failed to approve USDT address',
                            icon: 'error'
                        });
                    }
                },
                error: function(xhr) {
                    Swal.fire({
                        title: 'Error!',
                        text: xhr.responseJSON?.message || 'Failed to approve USDT address',
                        icon: 'error'
                    });
                },
                complete: function() {
                    button.html('<i class="fas fa-check"></i>');
                    button.prop('disabled', false);
                }
            });
        }
    });
});


      // Delete button handler
      $(document).on("click", ".delete-btn", function() {
    const usdtId = $(this).data("id");

    Swal.fire({
        title: 'Delete USDT Address?',
        text: "Are you sure you want to delete this USDT address? This action cannot be undone.",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#dc3545',
        cancelButtonColor: '#6c757d',
        confirmButtonText: 'Yes, delete',
        cancelButtonText: 'Cancel',
        reverseButtons: true
    }).then((result) => {
        if (result.isConfirmed) {
            const button = $(this);
            button.html('<i class="fas fa-spinner fa-spin"></i>');
            button.prop('disabled', true);

            $.ajax({
                url: `/api/webapi/addressstatus/rejected/${usdtId}`,
                type: "POST", // Using POST as per your provided API route
                success: function(response) {
                    if (response.success) {
                        Swal.fire({
                            title: 'Deleted!',
                            text: 'USDT address has been deleted',
                            icon: 'success',
                            timer: 1500,
                            showConfirmButton: false
                        });
                        loadUSDTAddresses();
                    } else {
                        Swal.fire({
                            title: 'Error!',
                            text: response.message || 'Failed to delete USDT address',
                            icon: 'error'
                        });
                    }
                },
                error: function(xhr) {
                    Swal.fire({
                        title: 'Error!',
                        text: xhr.responseJSON?.message || 'Failed to delete USDT address',
                        icon: 'error'
                    });
                },
                complete: function() {
                    button.html('<i class="fas fa-trash"></i>');
                    button.prop('disabled', false);
                }
            });
        }
    });
});


    });


  </script>
</body>
</html>