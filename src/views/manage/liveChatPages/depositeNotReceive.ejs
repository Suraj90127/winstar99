<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Deposit Not Received</title>

  <!-- Google Font -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" crossorigin="anonymous" />

  <!-- Bootstrap & AdminLTE -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/dist/css/adminlte.min.css">
  <link rel="stylesheet" href="/css/admin.css">
  
  <!-- SweetAlert2 CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

  <style>
    body {
      background-color: #f4f6f9;
      color: #343a40;
      font-family: 'Source Sans Pro', sans-serif;
    }
    .card {
      border-radius: 12px;
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
      background: #ffffff;
    }
    .card-title {
      color: #605bff;
      font-size: 22px;
      font-weight: bold;
    }
    .table th {
      background-color: #605bff;
      color: white;
      vertical-align: middle;
    }
    .table-striped tbody tr:nth-of-type(odd) {
      background-color: #f3f2ff;
    }
    .btn-primary {
      background-color: #605bff;
      border-color: #605bff;
    }
    .btn-primary:hover {
      background-color: #4a44c4;
      border-color: #4a44c4;
    }
    /* Image Styling */
    .deposit-img-container {
      width: 80px;
      height: 80px;
      margin: 0 auto;
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: #f8f9fa;
      border-radius: 5px;
    }
    .deposit-img {
      max-width: 100%;
      max-height: 100%;
      object-fit: contain;
      cursor: pointer;
      border-radius: 5px;
      transition: transform 0.3s;
    }
    .deposit-img:hover {
      transform: scale(1.1);
    }
    .no-image {
      color: #6c757d;
      font-size: 12px;
    }
    .badge {
      font-size: 0.85rem;
      padding: 0.35em 0.65em;
    }
    .bg-warning {
      background-color: #ffc107 !important;
    }
    .bg-success {
      background-color: #28a745 !important;
    }
    .action-buttons {
      display: flex;
      gap: 8px;
      justify-content: center;
    }
    .modal-img-container {
      max-height: 70vh;
      overflow: auto;
    }
    .modal-img-container img {
      max-width: 100%;
      height: auto;
    }
  </style>
</head>

<body class="hold-transition sidebar-mini">
  <div class="wrapper">
    <%- include('../nav') %>
    <div class="content-wrapper">
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1 class="text-dark">Deposit Not Received</h1>
            </div>
          </div>
        </div>
      </section>
      
      <section class="content">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Deposit Details</h3>
          </div>
          <div class="card-body p-0 table-responsive">
            <table class="table table-striped projects">
              <thead>
                <tr>
                  <th class="text-center">#</th>
                  <th class="text-center">UTR Number</th>
                  <th class="text-center">Receiver UPI ID</th>
                  <th class="text-center">Order Number</th>
                  <th class="text-center">Order Amount</th>
                  <th class="text-center">Deposit Proof</th>
                  <th class="text-center">Statement Proof</th>
                  <th class="text-center">Status</th>
                  <th class="text-center">Date</th>
                  <th class="text-center">Action</th>
                </tr>
              </thead>
              <tbody id="depositTable">
                <tr>
                  <td colspan="10" class="text-center">Loading deposit details...</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </section>
    </div>
  </div>

  <!-- Image Popup Modal -->
  <div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Image Preview</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body text-center modal-img-container">
          <img id="modalImage" src="" class="img-fluid" alt="Deposit Proof">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <!-- jQuery and Bootstrap -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- AdminLTE and SweetAlert -->
  <script src="/dist/js/adminlte.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
    $(document).ready(function () {
      // Load deposit data
      function loadDeposits() {
        $.ajax({
          type: "GET",
          url: "/api/webapi/getdetails",
          dataType: "json",
          success: function (response) {
            let html = "";
            const data = response.data || response; // Handle different response structures
            
            if (!Array.isArray(data) || data.length === 0) {
              html = '<tr><td colspan="10" class="text-center">No deposit records found.</td></tr>';
            } else {
              data.forEach((data, index) => {
                const proof1 = data.proof1 || '';
                const proof2 = data.proof2 || '';
                const statusClass = data.status === 'Pending' ? 'bg-warning' : 'bg-success';
                
                html += `
                  <tr>
                    <td class="text-center">${index + 1}</td>
                    <td class="text-center">${data.UTRNumber || 'N/A'}</td>
                    <td class="text-center">${data.ReceiverUPIID || 'N/A'}</td>
                    <td class="text-center">${data.OrderNumber || 'N/A'}</td>
                    <td class="text-center">${data.OrderAmount || '0'}</td>
                    <td class="text-center">
                      <div class="deposit-img-container">
                        ${proof1 ? 
                          `<img src="${proof1}" class="deposit-img" onclick="showImage('${proof1}')">` : 
                          '<span class="no-image">No Image</span>'}
                      </div>
                    </td>
                    <td class="text-center">
                      <div class="deposit-img-container">
                        ${proof2 ? 
                          `<img src="${proof2}" class="deposit-img" onclick="showImage('${proof2}')">` : 
                          '<span class="no-image">No Image</span>'}
                      </div>
                    </td>
                    <td class="text-center">
                      <span class="badge ${statusClass}">${data.status || 'Pending'}</span>
                    </td>
                    <td class="text-center">${data.created_at || 'N/A'}</td>
                    <td class="text-center action-buttons">
                      <button class="btn btn-success btn-sm confirm-btn" data-id="${data.id}">
                        <i class="fas fa-check"></i>
                      </button>
                      <button class="btn btn-danger btn-sm delete-btn" data-id="${data.id}">
                        <i class="fas fa-trash"></i>
                      </button>
                    </td>
                  </tr>`;
              });
            }
            
            $("#depositTable").html(html);
          },
          error: function(xhr, status, error) {
            console.error("Failed to load deposit details:", error);
            $("#depositTable").html('<tr><td colspan="10" class="text-center text-danger">Failed to load data. Please try again.</td></tr>');
          }
        });
      }

      // Show image in modal
      window.showImage = function(imgSrc) {
        $("#modalImage").attr("src", imgSrc);
        $("#imageModal").modal("show");
      };

   // Confirm deposit action
$(document).on("click", ".confirm-btn", function () {
  const depositId = $(this).data("id");

  Swal.fire({
    title: "Confirm Deposit?",
    text: "Are you sure you want to confirm this deposit as received?",
    icon: "question",
    showCancelButton: true,
    confirmButtonColor: "#28a745",
    cancelButtonColor: "#d33",
    confirmButtonText: "Yes, Confirm!",
    cancelButtonText: "Cancel",
    reverseButtons: true
  }).then((result) => {
    if (result.isConfirmed) {
      $.ajax({
        type: "POST",
        url: `/api/webapi/status/accepted/${depositId}`, // Adjusted route to match server-side logic
        dataType: "json",
        success: function (response) {
          Swal.fire({
            title: "Confirmed!",
            text: "The deposit has been marked as received.",
            icon: "success",
            confirmButtonColor: "#28a745"
          });
          loadDeposits(); // Refresh the deposit list
        },
        error: function (xhr, status, error) {
          Swal.fire({
            title: "Error!",
            text: "Failed to confirm deposit. Please try again.",
            icon: "error",
            confirmButtonColor: "#d33"
          });
        }
      });
    }
  });
});

// Delete deposit action
$(document).on("click", ".delete-btn", function () {
  const depositId = $(this).data("id");

  Swal.fire({
    title: "Delete Deposit Record?",
    text: "This will permanently delete this deposit record.",
    icon: "warning",
    showCancelButton: true,
    confirmButtonColor: "#d33",
    cancelButtonColor: "#6c757d",
    confirmButtonText: "Yes, Delete!",
    cancelButtonText: "Cancel",
    reverseButtons: true
  }).then((result) => {
    if (result.isConfirmed) {
      $.ajax({
        type: "POST",
        url: `/api/webapi/status/rejected/${depositId}`, // Adjusted route for delete action
        dataType: "json",
        success: function (response) {
          Swal.fire({
            title: "Deleted!",
            text: "The deposit record has been removed.",
            icon: "success",
            confirmButtonColor: "#28a745"
          });
          loadDeposits(); // Refresh the deposit list
        },
        error: function (xhr, status, error) {
          Swal.fire({
            title: "Error!",
            text: "Failed to delete deposit record. Please try again.",
            icon: "error",
            confirmButtonColor: "#d33"
          });
        }
      });
    }
  });
});

  
      
      
      // Initial load
      loadDeposits();
    });
  </script>
</body>
</html>