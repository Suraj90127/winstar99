            <body>
                <header>
                    <h1>Activity Reward System</h1>
                </header>
            
                <section class="content">
                    <div class="container">
                        <form id="activityForm">
                            <div class="form-group">
                                <label class="form-label" for="activity">Activity Level</label>
                                <input type="number" class="form-input" id="activity" required>
                            </div>
                            <div class="form-group">
                                <label class="form-label" for="reward">Calculated Reward</label>
                                <input type="text" class="form-input" id="reward" readonly>
                            </div>
                            <button type="button" class="btn btn-primary" id="updateButton">
                                <i class="fas fa-sync-alt"></i> Update Reward
                            </button>
                        </form>
            
                        <div class="table-wrapper">
                            <table>
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Minimum Betting Amount</th>
                                        <th>Activity Award</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="criteriaBody">
                                    <!-- Dynamic content will be loaded here -->
                                </tbody>
                            </table>
                        </div>
            
                        <h2>Progress Towards Reward</h2>
                        <div class="progress-bar">
                            <div class="progress-fill" id="progressBar">0%</div>
                        </div>
            
                        <h2>Achievements</h2>
                        <div id="achievements">
                            <div class="achievement-card">
                                <span>First Reward Achieved</span>
                                <span class="achievement-status">❌</span>
                            </div>
                            <div class="achievement-card">
                                <span>High Activity Level (2000+)</span>
                                <span class="achievement-status">❌</span>
                            </div>
                        </div>
                    </div>
                </section>
            
                <script>
                    // Initialize data
                    let rewardCriteria = [
                        { id: 1, minAmount: 100, award: '50 Points' },
                        { id: 2, minAmount: 200, award: '100 Points' },
                        { id: 3, minAmount: 500, award: '200 Points' },
                        { id: 4, minAmount: 1000, award: '500 Points' },
                        { id: 5, minAmount: 2000, award: '1000 Points' }
                    ];
            
                    // Render table function
                    function renderTable() {
                        const tbody = document.getElementById('criteriaBody');
                        tbody.innerHTML = rewardCriteria.map(criteria => `
                            <tr>
                                <td>${criteria.id}</td>
                                <td>${criteria.minAmount}</td>
                                <td>${criteria.award}</td>
                                <td>
                                    <div class="action-buttons">
                                        <button class="edit-btn" data-id="${criteria.id}">
                                            <i class="fas fa-edit"></i> Edit
                                        </button>
                                        <button class="delete-btn" data-id="${criteria.id}">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        `).join('');
                    }
            
                    // Initial render
                    renderTable();
            
                    // Update functionality
                    document.getElementById('updateButton').addEventListener('click', () => {
                        const activity = parseInt(document.getElementById('activity').value);
                        let reward = 'No reward available';
                        
                        // Find matching reward
                        const matchedCriteria = [...rewardCriteria].reverse().find(c => activity >= c.minAmount);
                        if (matchedCriteria) reward = matchedCriteria.award;
            
                        document.getElementById('reward').value = reward;
            
                        // Update progress
                        const maxAmount = Math.max(...rewardCriteria.map(c => c.minAmount));
                        const progress = Math.min((activity / maxAmount) * 100, 100);
                        document.getElementById('progressBar').style.width = `${progress}%`;
                        document.getElementById('progressBar').textContent = `${progress.toFixed(1)}%`;
            
                        // Update achievements
                        const achievements = document.querySelectorAll('.achievement-status');
                        achievements[0].textContent = activity >= 100 ? '✔️' : '❌';
                        achievements[1].textContent = activity >= 2000 ? '✔️' : '❌';
                    });
            
                    document.addEventListener('click', (e) => {
    const deleteBtn = e.target.closest('.delete-btn');
    if (deleteBtn) {
        const id = parseInt(deleteBtn.dataset.id, 10);
        if (isNaN(id)) return;

        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc3545', // Replace with actual color
            cancelButtonColor: '#6c757d',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                rewardCriteria = rewardCriteria.filter(c => c.id !== id);
                renderTable();
                Swal.fire('Deleted!', 'Criteria has been deleted.', 'success');
            }
        });
    }
});

            
                    // Edit functionality
                    document.addEventListener('click', (e) => {
                        if (e.target.closest('.edit-btn')) {
                            const id = parseInt(e.target.closest('.edit-btn').dataset.id);
                            const criteria = rewardCriteria.find(c => c.id === id);
                            
                            Swal.fire({
                                title: 'Edit Criteria',
                                html: `
                                    <input type="number" id="minAmount" class="swal2-input" placeholder="Minimum Amount" value="${criteria.minAmount}">
                                    <input type="text" id="award" class="swal2-input" placeholder="Award" value="${criteria.award}">
                                `,
                                focusConfirm: false,
                                preConfirm: () => {
                                    return {
                                        minAmount: parseInt(document.getElementById('minAmount').value),
                                        award: document.getElementById('award').value
                                    }
                                }
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    criteria.minAmount = result.value.minAmount;
                                    criteria.award = result.value.award;
                                    renderTable();
                                    Swal.fire('Updated!', 'Criteria has been updated.', 'success');
                                }
                            });
                        }
                    });
                </script>
